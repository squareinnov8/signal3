{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Signal3 Design Tokens - Synced from Figma",
  "global": {
    "colors": {
      "primary": {
        "25": { "$value": "#F5F8FF", "$type": "color" },
        "50": { "$value": "#EFF4FF", "$type": "color" },
        "100": { "$value": "#D1E0FF", "$type": "color" },
        "200": { "$value": "#B2CCFF", "$type": "color" },
        "300": { "$value": "#84ADFF", "$type": "color" },
        "400": { "$value": "#528BFF", "$type": "color" },
        "500": { "$value": "#2970FF", "$type": "color" },
        "600": { "$value": "#1849A9", "$type": "color", "$description": "Equifax Primary Blue" },
        "700": { "$value": "#155EEF", "$type": "color" },
        "800": { "$value": "#0C2B5E", "$type": "color", "$description": "Equifax Dark Blue" },
        "900": { "$value": "#0A1D3D", "$type": "color" },
        "950": { "$value": "#051024", "$type": "color" }
      }
    },
    "spacing": {
      "0": { "$value": "0", "$type": "dimension" },
      "1": { "$value": "0.25rem", "$type": "dimension" },
      "2": { "$value": "0.5rem", "$type": "dimension" },
      "3": { "$value": "0.75rem", "$type": "dimension" },
      "4": { "$value": "1rem", "$type": "dimension" },
      "5": { "$value": "1.25rem", "$type": "dimension" },
      "6": { "$value": "1.5rem", "$type": "dimension" },
      "8": { "$value": "2rem", "$type": "dimension" },
      "10": { "$value": "2.5rem", "$type": "dimension" },
      "12": { "$value": "3rem", "$type": "dimension" },
      "16": { "$value": "4rem", "$type": "dimension" },
      "20": { "$value": "5rem", "$type": "dimension" },
      "24": { "$value": "6rem", "$type": "dimension" }
    },
    "typography": {
      "fontFamily": {
        "display": { "$value": "Equifax Sans, system-ui, sans-serif", "$type": "fontFamily" },
        "body": { "$value": "Equifax Sans, system-ui, sans-serif", "$type": "fontFamily" },
        "mono": { "$value": "JetBrains Mono, monospace", "$type": "fontFamily" }
      },
      "fontSize": {
        "xs": { "$value": "0.75rem", "$type": "dimension" },
        "sm": { "$value": "0.875rem", "$type": "dimension" },
        "md": { "$value": "1rem", "$type": "dimension" },
        "lg": { "$value": "1.125rem", "$type": "dimension" },
        "xl": { "$value": "1.25rem", "$type": "dimension" },
        "2xl": { "$value": "1.5rem", "$type": "dimension" },
        "3xl": { "$value": "1.875rem", "$type": "dimension" },
        "4xl": { "$value": "2.25rem", "$type": "dimension" }
      }
    }
  }
}
